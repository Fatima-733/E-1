def find_even_numbers(limit):
    """
    Prints all even numbers starting from 1 up to (but not including) the limit.
    """
    print(f"--- Even numbers up to {limit}: ---")
    
    # Use a for loop to iterate from 1 up to (limit - 1)
    for number in range(1, limit):
        
        # The modulo operator (%) returns the remainder of a division.
        # If the remainder when dividing by 2 is 0, the number is even.
        if number % 2 == 0:
            print(number)

# --- Main Execution ---

# Set the upper boundary for the search
upper_limit = 21 

# Call the function to find and print the even numbers
find_even_numbers(upper_limit)
